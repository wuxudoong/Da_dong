<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ll_message_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/B1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30px"
            android:layout_marginRight="30px"
            android:lineSpacingExtra="50px"
            android:padding="30px"
            android:textColor="@color/C2"
            android:textSize="@dimen/T3"
            tools:text="文案文案文案文案文案文案 " />

        <RelativeLayout
            android:id="@+id/rl_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50px"
            android:layout_marginTop="60px">

            <TextView
                android:id="@+id/tv_affirm"
                android:layout_width="200px"
                android:layout_height="100px"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="100px"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/lib_wxd_000"
                android:textColor="@color/theme_green"
                android:textSize="@dimen/T2" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="200px"
                android:layout_height="100px"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100px"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/lib_wxd_001"
                android:textColor="@color/theme_green"
                android:textSize="@dimen/T2" />

        </RelativeLayout>


    </LinearLayout>

</layout>